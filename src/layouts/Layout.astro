---
import "../styles/global.css";

const navItems = [
  { href: "/", label: "Accueil" },
  { href: "/simple", label: "Simple" },
  { href: "/penguins-simple", label: "Penguins simples" },
  { href: "/penguins-filter", label: "Penguins filtre" },
  { href: "/penguins-multi-filters", label: "Penguins filtres+" },
  { href: "/citywages", label: "City wages" },
];

const currentPath = Astro.url?.pathname ?? "/";
const { title = "TP Observable Plot" } = Astro.props;
---

<!doctype html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <header class="site-header">
      <div class="wrapper header-inner">
        <a class="brand" href="/">TP Observable Plot</a>
        <nav class="site-nav" aria-label="Navigation principale">
          {navItems.map((item) => (
            <a
              href={item.href}
              class={`nav-link${currentPath === item.href ? " nav-link--active" : ""}`}
            >
              {item.label}
            </a>
          ))}
        </nav>
      </div>
    </header>
    <main class="wrapper main-content">
      <slot />
    </main>
    <footer class="site-footer">
      <div class="wrapper">
        <p>TP Observable Plot - rendu cote client</p>
      </div>
    </footer>
  </body>
</html>

<style>
  :root {
    color-scheme: light dark;
    font-family: "Inter", system-ui, -apple-system, "Segoe UI", sans-serif;
    background: #f7f7f7;
    color: #1d1d1f;
  }

  body {
    margin: 0;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    background: linear-gradient(180deg, rgba(33, 150, 243, 0.08), transparent 240px);
  }

  .wrapper {
    width: min(1080px, 90vw);
    margin: 0 auto;
  }

  .site-header {
    background: rgba(255, 255, 255, 0.9);
    backdrop-filter: blur(6px);
    border-bottom: 1px solid rgba(0, 0, 0, 0.05);
    position: sticky;
    top: 0;
    z-index: 10;
  }

  .header-inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1rem 0.5rem;
    gap: 1rem;
  }

  .brand {
    font-weight: 700;
    text-decoration: none;
    color: inherit;
    font-size: 1.1rem;
  }

  .site-nav {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .nav-link {
    padding: 0.35rem 0.75rem;
    border-radius: 999px;
    text-decoration: none;
    color: #1d1d1f;
    background: rgba(0, 0, 0, 0.05);
    transition: background 0.2s ease, color 0.2s ease;
    font-size: 0.9rem;
  }

  .nav-link:hover {
    background: rgba(33, 150, 243, 0.18);
    color: #1565c0;
  }

  .nav-link--active {
    background: #2196f3;
    color: #fff;
  }

  .main-content {
    flex: 1;
    padding: 2.5rem 0 3rem;
  }

  .site-footer {
    border-top: 1px solid rgba(0, 0, 0, 0.08);
    background: rgba(255, 255, 255, 0.85);
    text-align: center;
    padding: 1rem 0;
    font-size: 0.85rem;
    color: rgba(29, 29, 31, 0.7);
  }

  @media (prefers-color-scheme: dark) {
    :root {
      background: #0b0e13;
      color: #f0f3f7;
    }

    body {
      background: linear-gradient(180deg, rgba(22, 117, 202, 0.22), transparent 300px);
    }

    .site-header,
    .site-footer {
      background: rgba(12, 18, 27, 0.9);
      border-color: rgba(255, 255, 255, 0.08);
    }

    .nav-link {
      color: #f0f3f7;
      background: rgba(255, 255, 255, 0.06);
    }

    .nav-link:hover {
      background: rgba(33, 150, 243, 0.35);
      color: #fff;
    }

    .nav-link--active {
      background: #42a5f5;
      color: #0b0e13;
    }

    .site-footer {
      color: rgba(240, 243, 247, 0.7);
    }
  }
</style>
